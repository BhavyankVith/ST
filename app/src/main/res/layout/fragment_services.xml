<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4E0D3A"
    tools:context="com.example.bk.st.Services">



    <android.support.v7.widget.CardView
        android:id="@+id/sd"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#5D1049"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_phonelink_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Development"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="25dp"

                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-10dp"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/training"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#5D1049"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_build_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="25dp"

                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/finishing"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#5D1049"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_school_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finishing School"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="25dp"

                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mentoring"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#5D1049"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_supervisor_account_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentoring"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="25dp"

                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
